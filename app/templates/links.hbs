{{page-title "Liens"}}
<div class="links">

  <div class="sites">
    {{#each this.linkItems as |linkItem|}}
      <div class="link">
        <a href={{linkItem.url}} target="_blank" rel="noopener noreferrer">
          <img src={{linkItem.image}} alt={{linkItem.title}} title={{linkItem.title}}>
          <br>
          {{linkItem.title}}
        </a>
      </div>
    {{/each}}
  </div>

  {{#if this.docs}}
    <div class="docs">
      <h1>Documents à télécharger</h1>
      <div class="row">
        <div class="col-12">
          <ul>
            {{#each this.docs as |doc|}}
              <li>
                {{doc.title}} : <a href={{doc.url}} target="_blank" rel="noopener noreferrer">Télécharger</a>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  {{/if}}

</div>
